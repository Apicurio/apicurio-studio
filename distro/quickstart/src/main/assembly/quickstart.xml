<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>quickstart</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- Studio UI WAR -->
    <dependencySet>
      <outputDirectory>apicurio-studio-${project.version}/standalone/deployments</outputDirectory>
      <outputFileNameMapping>apicurio-studio.war</outputFileNameMapping>
      <includes>
        <include>*:apicurio-studio-platforms-wildfly-ui:war</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
    </dependencySet>
    <!-- Studio Hub API -->
    <dependencySet>
      <outputDirectory>apicurio-studio-${project.version}/standalone/deployments</outputDirectory>
      <outputFileNameMapping>apicurio-studio-api.war</outputFileNameMapping>
      <includes>
        <include>*:apicurio-studio-platforms-wildfly-api:war</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
    </dependencySet>
    <!-- Studio Hub Editing (WS) -->
    <dependencySet>
      <outputDirectory>apicurio-studio-${project.version}/standalone/deployments</outputDirectory>
      <outputFileNameMapping>apicurio-studio-ws.war</outputFileNameMapping>
      <includes>
        <include>*:apicurio-studio-platforms-wildfly-ws:war</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>target/apicurio-studio-${project.version}</directory>
      <outputDirectory>apicurio-studio-${project.version}</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/welcome-content</directory>
      <outputDirectory>apicurio-studio-${project.version}/welcome-content</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/standalone/configuration</directory>
      <outputDirectory>apicurio-studio-${project.version}/standalone/configuration</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/docs/apicurio</directory>
      <outputDirectory>apicurio-studio-${project.version}/docs/apicurio</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../../back-end/hub-core/src/main/resources/io/apicurio/hub/core/storage/jdbc</directory>
      <outputDirectory>apicurio-studio-${project.version}/ddls</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
  </fileSets>
</assembly>

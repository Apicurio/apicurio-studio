{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "npm"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "ui/deploy-examples/**",
    "ui/Dockerfile",
    "docs/**",
    "docs-playbook/**"
  ],
  "packageRules": [
    {
      "groupName": "Dependencies: App",
      "matchPaths": [
        "ui/ui-app/**"
      ],
      "enabled": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Dependencies: App (Major)",
      "matchPaths": [
        "ui/ui-app/**"
      ],
      "enabled": true,
      "matchUpdateTypes": ["major"],
      "schedule": [ "* 0 1 * *" ]
    },
    {
      "groupName": "Dependencies: App : Kiota",
      "matchPaths": [
        "ui/ui-app/**"
      ],
      "matchPackageNames": ["@microsoft/kiota-*", "@apicurio/apicurio-registry-sdk"],
      "enabled": true,
      "schedule": [ "* 0 1 * *" ]
    },
    {
      "groupName": "Dependencies: Playwright Tests",
      "matchPaths": [
        "ui/tests/**"
      ],
      "enabled": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Dependencies: Playwright Tests (Major)",
      "matchPaths": [
        "ui/tests/**"
      ],
      "enabled": true,
      "matchUpdateTypes": ["major"],
      "schedule": [ "* 0 1 * *" ]
    },
    {
      "groupName": "Dependencies: Editors",
      "matchPaths": [
        "ui/ui-editors/**"
      ],
      "enabled": false
    }
  ]
}
